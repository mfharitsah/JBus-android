<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScheduleActivity"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/sky"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_view"
        android:text="SET BUS DATES"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input the date below"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/calendar_input"
            android:hint="Set the date"
            android:textSize="20sp"
            android:background="@drawable/card_with_low_rounded"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/calendar_picker"
                android:layout_gravity="end"
                android:background="@drawable/calendar"
                android:backgroundTint="@color/sun"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/time_input"
            android:hint="Set the spesific time"
            android:textSize="20sp"
            android:background="@drawable/card_with_low_rounded"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/time_picker"
                android:layout_gravity="end"
                android:background="@drawable/clock"
                android:backgroundTint="@color/sun"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="5dp"
        >
        <EditText
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/id_input"
            android:hint="Id"
            android:textSize="20sp"
            android:background="@drawable/card_with_low_rounded"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/add_schedule_btn"
            android:text="Add schedule"
            android:textStyle="bold"
            android:textSize="23sp"
            android:backgroundTint="@color/sun"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bus List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/main_table"
            >
            <TableRow>
                <TextView
                    android:text="ID"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:text="Bus Name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="60dp"
                    />
                <TextView
                    android:text="Departure - Arrival"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>


</LinearLayout>