<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddBusActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Bus"
        android:textSize="35sp"
        android:textColor="@color/sky"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Input and select your bus information"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/bus_name"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Bus Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/bus_capacity"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Capacity"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/bus_price"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Price"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Bus Type"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bus_icon"
            app:tint="@color/black" />
        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bus_icon"
            app:tint="@color/black" />
        <Spinner
            android:id="@+id/departure_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bus_icon"
            app:tint="@color/black" />
        <Spinner
            android:id="@+id/arrival_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facilities"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="fill_horizontal"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_checkbox"
                android:text="AC"
                android:textSize="17sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wifi_checkbox"

                android:text="WiFi"
                android:textSize="17sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toilet_checkbox"
                android:text="Toilet"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_checkbox"
                android:text="LCD TV"
                android:textSize="17sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coolbox_checkbox"
                android:text="Coolbox"
                android:textSize="17sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lunch_checkbox"
                android:text="Lunch"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="fill_horizontal"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baggage_checkbox"
                android:text="Large Baggage"
                android:textSize="17sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/socket_checkbox"
                android:text="Electric Socket"
                android:textSize="17sp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_bus_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD BUS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />
</LinearLayout>